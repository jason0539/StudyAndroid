<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5500"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原图" />

        <ImageView
            android:id="@+id/iv_bitmap_origin"
            android:layout_width="100dp"
            android:layout_height="100dp" />


        <Button
            android:id="@+id/btn_bitmap_decode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bitmap->compress->byte[]->bitmap" />

        <ImageView
            android:id="@+id/iv_bitmap_decode"
            android:layout_width="100dp"
            android:layout_height="100dp" />


        <Button
            android:id="@+id/btn_bitmap_pixel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bitmap->byte[]->bitmap" />

        <ImageView
            android:id="@+id/iv_bitmap_pixel"
            android:layout_width="100dp"
            android:layout_height="100dp" />


        <Button
            android:id="@+id/btn_bitmap_compress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bitmap->byte[]->file->compress->bitmap" />

        <ImageView
            android:id="@+id/iv_bitmap_compress"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
</ScrollView>